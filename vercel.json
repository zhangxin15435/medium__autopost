{
    "version": 2,
    "functions": {
        "api/publish.js": {
            "maxDuration": 300,
            "memory": 1024
        },
        "api/cron-publish.js": {
            "maxDuration": 300,
            "memory": 1024
        },
        "api/batch-upload.js": {
            "maxDuration": 300,
            "memory": 1024
        },
        "api/articles.js": {
            "maxDuration": 60,
            "memory": 512
        }
    },
    "crons": [
        {
            "path": "/api/cron-publish",
            "schedule": "0 9 * * *"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true",
        "PUPPETEER_EXECUTABLE_PATH": "/usr/bin/google-chrome-stable"
    }
}